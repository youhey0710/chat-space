.chat-main-message-lists{data: {message: {id:message.id}}}

  .chat-main_message-list--info
    .chat-main_message-list--info__member
      = message.user.name
    .chat-main_message-list--info__data
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .chat-main_message-list--message
    - if message.content.present?
      %p.lower-message__content
        = message.content
    = image_tag message.image.url, class: 'lower-message__image' if message.image.present?